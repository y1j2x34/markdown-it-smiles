{
    "compilerOptions": {
        "rootDir": "./",
        "baseUrl": ".",
        "target": "ESNext",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "Bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "strict": true,
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedIndexedAccess": true
    },
    "include": [
        "src",
        "tests",
        "dev",
        "vitest.config.ts",
        "tsup.config.ts"
    ]
}